<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

   <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <size android:height="20dp"/>

            <gradient
                android:angle="270"
                android:endColor="@color/disabled_color"
                android:startColor="@color/disabled_color" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle" >
                <corners android:radius="5dp" />
                <size android:height="20dp"/>

                <gradient
                    android:angle="270"
                    android:endColor="#ff8db8cd"
                    android:startColor="#ff8db8cd" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle" >
                <corners android:radius="5dp" />
                <size android:height="20dp"/>

                <gradient
                    android:angle="270"
                    android:endColor="@color/normal_color"
                    android:startColor="@color/normal_color" />
            </shape>
        </clip>
    </item>

